<%= simple_form_for(@promotion) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :course_id %>
    <%= f.input :code %>
    <%= f.input :price %>
    <%= f.input :single_use %>
    <%= f.input :used %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
