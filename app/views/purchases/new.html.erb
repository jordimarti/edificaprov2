<div class="purchase-container">
  <div class="row">
    <div class="small-12 columns">
      <h2 class="page-title"><%= t('.shop') %></h2>
    </div>
  </div>
  <div class="row">
    <div class="medium-4 columns">
      <div class="library-course-container">
        <div class="library-course-image">
          <%= image_tag(@course.image, :alt => @course_name, :class => 'responsive-image') %>
        </div>
        <div class="library-course-text">
          <div class="library-course-title">
            <%= @course_name %>
          </div>
          
        </div>
        <div class="course-price">
          <%= t('.course_price') %>: <%= (@course.price/100).to_s %> € <br/>
          <span class="taxes"><%= t('.vat_included') %></span>
        </div>
      </div>
    </div>
    <div class="medium-7 medium-offset-1 columns">
      <div class="purchase-form">
        <h3 class="pay-form-title"><%= t('.buy_for') %> <%= (@course.price/100).to_s %> €</h3>
        <p><%= t('.purchase_text') %></p>
        <%= simple_form_for @purchase do |f| %>
            
          <%= f.error_notification %>

          <input name="purchase[course_id]" type="hidden" value="<%= @course.id %>" />

          <div class="form-inputs">
            
            <div class="row">
              <div class="medium-6 columns end">
                <%= f.input :promotion_code, error_html: { class: 'error'} %>
              </div>
            </div>

            <div class="row">
              <div class="medium-12 columns">
                <div class="terms-text">
                  <%= t('.remember_terms') %> <%= link_to(t('.terms_and_conditions'), {:controller => '/visitors', :action => 'terms'}) %>.
                </div>
              </div>
            </div>
            <div class="row">
              <div class="medium-12 columns">
                <%= f.input :terms_of_service, required: true, error_html: { class: 'error'} %>
              </div>
            </div>
            
            <div class="row">
              <div class="medium-12 columns">
                <%= f.button :submit, t('.continue_with_payment') %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
