<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Course</th>
      <th>Terms of service</th>
      <th>Paid</th>
      <th>Refund</th>
      <th>Price</th>
      <th>Promotion code</th>
      <th>Bill number</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.user_id %></td>
        <td><%= purchase.course_id %></td>
        <td><%= purchase.terms_of_service %></td>
        <td><%= purchase.paid %></td>
        <td><%= purchase.refund %></td>
        <td><%= purchase.price %></td>
        <td><%= purchase.promotion_code %></td>
        <td><%= purchase.bill_number %></td>
        <td><%= purchase.created_at %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

