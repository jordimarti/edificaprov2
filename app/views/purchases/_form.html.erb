<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :course_id %>
    <%= f.input :terms_of_service %>
    <%= f.input :paid %>
    <%= f.input :refund %>
    <%= f.input :price %>
    <%= f.input :promotion_code %>
    <%= f.input :bill_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
