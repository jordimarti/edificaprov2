<p id="notice"><%= notice %></p>

<h1>Subcourses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Duration</th>
      <th>Videos duration</th>
      <th>Library image</th>
      <th>Intro video hd</th>
      <th>Intro video sd</th>
      <th>Intro video image</th>
      <th>Locale</th>
      <th>Region</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcourses.each do |subcourse| %>
      <tr>
        <td><%= subcourse.course_id %></td>
        <td><%= subcourse.name %></td>
        <td><%= subcourse.duration %></td>
        <td><%= subcourse.videos_duration %></td>
        <td><%= subcourse.library_image %></td>
        <td><%= subcourse.intro_video_hd %></td>
        <td><%= subcourse.intro_video_sd %></td>
        <td><%= subcourse.intro_video_image %></td>
        <td><%= subcourse.locale %></td>
        <td><%= subcourse.region %></td>
        <td><%= subcourse.visible %></td>
        <td><%= link_to 'Show', subcourse %></td>
        <td><%= link_to 'Edit', edit_subcourse_path(subcourse) %></td>
        <td><%= link_to 'Destroy', subcourse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

